<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="10dip"
              android:background="@color/white"
              android:orientation="vertical"

              android:padding="10dip"
              android:weightSum="1">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.09"
        android:background="@drawable/blue_background"
        android:gravity="center"
        android:text="Sign Up"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:id="@+id/signup_ad_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:background="@drawable/blue_background3"
        android:gravity="left"
        android:padding="5dip"
        android:paddingBottom="10dip"
        android:text="@string/login_top_message"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="italic|bold"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="5dip"
        android:text="Email"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#516666"
        android:textStyle="italic"/>

    <EditText
        android:id="@+id/email_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView8"
        android:layout_weight="0.04"
        android:background="@drawable/border_field"
        android:ems="10"
        android:hint="use only your email to sign in"
        android:inputType="textEmailAddress"
        android:padding="5dip"
        android:paddingBottom="10dip"
        />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_field"
        android:background="@color/white"
        android:paddingLeft="5dip"
        android:text="Username"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#516666"
        android:textStyle="italic"
        />

    <EditText
        android:id="@+id/header_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView9"
        android:layout_toRightOf="@+id/textView9"
        android:layout_weight="0.04"
        android:background="@drawable/border_field"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="5dip"
        android:paddingBottom="5dip"
        />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_field"
        android:background="@color/white"
        android:paddingLeft="5dip"
        android:text="Password"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#516666"
        android:textStyle="italic"
        />

    <EditText
        android:id="@+id/password_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView9"
        android:layout_toRightOf="@+id/textView9"
        android:layout_weight="0.04"
        android:background="@drawable/border_field"
        android:ems="10"
        android:inputType="textPassword"
        android:padding="5dip"
        android:paddingBottom="5dip"
        />

    <Button
        android:id="@+id/sign_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="5dip"
        android:background="@drawable/blue_background3"
        android:text="sign In/Up"/>

    <TextView
        android:id="@+id/error_messages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.20"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/red"/>
</LinearLayout>