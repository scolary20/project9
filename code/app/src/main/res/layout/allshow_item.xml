<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="5dp"
              android:background="@color/white"
              android:orientation="vertical"
              android:padding="5dp"
              android:weightSum="1">

    <TextView
        android:id="@+id/show_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="2"
        android:background="@drawable/blue_background3"
        android:gravity="center"
        android:text="empire"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000"/>

    <RelativeLayout
        android:id="@+id/cadre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/show_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="left"
            android:background="@color/white"
            android:gravity="left"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/empire"/>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toEndOf="@+id/show_image"
            android:layout_toRightOf="@+id/show_image"
            android:orientation="vertical"
            android:paddingTop="10dip">

            <ImageButton
                android:id="@+id/unlock_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:alpha="0.8"
                android:background="#00000000"
                android:paddingLeft="2dip"
                android:paddingRight="2dip"
                android:src="@drawable/add_show"
                android:textColor="#000"
                />


            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                />

            <ImageButton
                android:id="@+id/desc_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:alpha="0.8"
                android:background="#00000000"
                android:gravity="center"
                android:paddingLeft="2dip"
                android:paddingRight="2dip"
                android:src="@drawable/view_description"
                android:text="Description"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000"
                />


        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/show_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.4"
            android:gravity="left"
            android:padding="5dip"
            android:paddingRight="5dip"
            android:text="HBO International"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>