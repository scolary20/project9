<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/blue_background5"
              android:orientation="vertical"
              android:weightSum="1">

    <ImageView
        android:id="@+id/back"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_gravity="left"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginBottom="5dip"
        android:gravity="right"
        android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/watching"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:alpha="0.3"
        android:background="#000"/>

    <ImageView
        android:id="@+id/commet_pp"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_gravity="center"
        android:layout_margin="5dip"
        android:background="@drawable/rounded_profile"
        android:gravity="right"
        android:scaleType="fitXY"
        android:src="@drawable/riri"/>


    <LinearLayout
        android:id="@+id/photo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="2dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip">

        <TextView
            android:id="@+id/up_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:drawableLeft="@drawable/up_mark"
            android:drawablePadding="5dp"
            android:text="mark up"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/down_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:drawableLeft="@drawable/down_mark"
            android:drawablePadding="5dp"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:text="mark down"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#fff"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/watching"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:alpha="0.3"
        android:background="#000"/>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="horizontal"
                      android:weightSum="1"
                      android:id="@+id/group2">

            <EditText
                android:id="@+id/cment_inputText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:layout_weight="0.8"
                android:layout_marginBottom="10dip"
                android:layout_gravity="center_vertical"
                android:background="@drawable/border_field2"
                android:hint="comment here..."
                android:padding="10dp"/>

            <ImageButton
                android:id="@+id/send"
                android:layout_width="60dip"
                android:scaleType="fitXY"
                android:layout_weight="0.1"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:background="@color/transparent"
                android:src="@drawable/icon_send"
                android:layout_height="50dip"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>

</LinearLayout>