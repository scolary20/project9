<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"

        android:orientation="horizontal">

        <Button
            android:id="@+id/tab1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="My Shows"/>

        <View
            android:id="@+id/view1"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="#1e3d4c"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            />

        <Button
            android:id="@+id/tab2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="All Shows"/>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:indeterminate="false"
            android:visibility="visible"
            />

        <TextView
            android:id="@+id/cmt_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progressBar"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="Loading Comments..."
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textCursorDrawable="@drawable/blue_background3"
            android:visibility="visible"/>

        <ListView
            android:id="@+id/allshow_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cmt_feedback"
            android:dividerHeight="1dip"
            tools:listitem="@layout/allshow_item">
        </ListView>
    </RelativeLayout>
</LinearLayout>
